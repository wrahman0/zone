<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#d7d7d7" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menuItemRowHeight"
        android:scaleType="center"
        android:src="@drawable/ic_action_error" />

    <ImageView
        android:id="@+id/menuItemImage"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menuItemRowHeight"
        android:scaleType="centerCrop"
        android:src="@null" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menuItemRowHeight"
        android:orientation="vertical" >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@color/menuItemRowBg"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/menuItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="15"
                android:text="Sample Dish"
                android:textColor="@color/menuRowTextColor"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/menuItemCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230 Cal"
                android:textColor="@color/menuRowTextColor" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>